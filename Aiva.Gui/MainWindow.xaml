                        </Viewbox.Child>
                    </Viewbox>
                    
                    <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="White"
                                Text="{Binding Label}" />
                </Grid>
            </DataTemplate>
