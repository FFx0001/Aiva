        <RadioButton x:Name="rbTorten" GroupName="Chart" IsChecked="{Binding ChartPie}" Content="torten" HorizontalAlignment="Left" Margin="123,4,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
        <RadioButton x:Name="rbBalken" GroupName="Chart" IsChecked="{Binding ChartBasic}" Content="balken" HorizontalAlignment="Left" Margin="198,4,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
        <RadioButton x:Name="rbBla" GroupName="Chart" Content="Donut" IsChecked="{Binding ChartDonut}" HorizontalAlignment="Left" Margin="283,4,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>

        <Grid Grid.Row="2" Grid.Column="2">
            <Grid Visibility="{Binding ChartPie}" Margin="0,32,0,0">
                <lvc:PieChart x:Name="Torten" LegendLocation="Bottom"  Series="{Binding tChartCollection}" Width="300" Height="300">
                    <lvc:PieChart.Style>
                        <Style TargetType="lvc:PieChart">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChartPie}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ChartPie}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </lvc:PieChart.Style>
                </lvc:PieChart>
            </Grid>

            <Grid Visibility="{Binding ChartDonut}" Margin="0,32,0,0">
                <lvc:PieChart x:Name="Donut" InnerRadius="100" LegendLocation="Bottom" Series="{Binding dChartCollection}" Width="300" Height="300">
                    <lvc:PieChart.Style>
                        <Style TargetType="lvc:PieChart">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChartDonut}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ChartDonut}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </lvc:PieChart.Style>
                    <lvc:PieChart.ChartLegend>
                        <lvc:DefaultLegend BulletSize="20"></lvc:DefaultLegend>
                    </lvc:PieChart.ChartLegend>
                    <lvc:PieChart.DataTooltip>
                        <lvc:DefaultTooltip BulletSize="20"></lvc:DefaultTooltip>
                    </lvc:PieChart.DataTooltip>
                </lvc:PieChart>
            </Grid>

            <Grid Visibility="{Binding ChartBasic}" Margin="0,32,0,0">

                <lvc:CartesianChart Width="300" Height="300" Series="{Binding bChartCollection}" >
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis LabelsRotation="10" Labels="{Binding OptionNames}" Position="LeftBottom" >
                            <lvc:Axis.Separator >
                                <lvc:Separator Step="1"></lvc:Separator>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Count" LabelFormatter="{Binding Formatter}" Position="RightTop">
                            <lvc:Axis.Separator>
                                <lvc:Separator IsEnabled="False" Step="1"></lvc:Separator>
                            </lvc:Axis.Separator>
                        </lvc:Axis>
                    </lvc:CartesianChart.AxisY>

                    <lvc:CartesianChart.Style>
                        <Style TargetType="lvc:CartesianChart">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChartBasic}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ChartBasic}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </lvc:CartesianChart.Style>
                </lvc:CartesianChart>
            </Grid>


