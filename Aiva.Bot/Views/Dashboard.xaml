<Controls:MetroContentControl
    x:Class="Aiva.Bot.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="503"
    d:DesignWidth="1092"
    mc:Ignorable="d">
    <Grid Background="#FF8C8E94">
        <TextBox
            x:Name="tbStreamtitel"
            Width="290"
            Height="23"
            Margin="82,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Controls:TextBoxHelper.ClearTextButton="True"
            KeyDown="tbStreamtitel_KeyDown"
            Text=""
            TextWrapping="Wrap" />
        <ComboBox
            x:Name="cbGames"
            Width="290"
            Margin="82,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            x:Name="btnTitleChange"
            Width="91"
            Margin="377,11,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnTitleChange_ClickAsync"
            Content="Titel ändern" />
        <Button
            x:Name="btnGameChange"
            Width="91"
            Margin="377,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnGameChange_ClickAsync"
            Content="Spiel ändern" />
        <Label
            x:Name="label"
            Margin="45,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Titel" />
        <Label
            x:Name="label_Copy"
            Margin="45,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Spiel" />
        <Label
            x:Name="label1"
            Margin="107,216,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nachricht senden" />
        <TextBox
            x:Name="tbMessageToSend"
            Width="361"
            Height="23"
            Margin="107,184,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            KeyDown="tbMessageToSend_KeyDown"
            Text=""
            TextWrapping="Wrap" />
        <Button
            x:Name="btnSendMessage"
            Width="107"
            Margin="361,215,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnSendMessage_Click"
            Content="Sende Nachricht" />
        <Label
            x:Name="label2"
            Margin="224,87,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Werbung" />
        <ComboBox
            x:Name="cbCommercial"
            Width="180"
            Margin="288,89,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            x:Name="btnCommercial"
            Width="180"
            Margin="288,128,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnCommercial_ClickAsync"
            Content="Werbung schalten"
            ToolTip="not shown"
            ToolTipOpening="btnCommercial_ToolTipOpening" />
        <!--<WebBrowser HorizontalAlignment="Left" Height="483" Margin="605,10,0,0" VerticalAlignment="Top" Width="452" Source="http://www.twitch.tv/aeffchaen/chat"/> -->
        <CefSharp:ChromiumWebBrowser
            Width="452"
            Height="483"
            Margin="605,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Address="http://www.twitch.tv/aeffchaen/chat" />
    </Grid>
</Controls:MetroContentControl>
